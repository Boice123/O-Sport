<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jsj141.osport.dao.AdminDao">

    <sql id="dynamicWhere">
        <where>
            <if test="_parameter.containsKey('ids') and ids != null and ids != ''">
                and id in (${ids})
            </if>
        </where>
    </sql>

    <select id="select" resultType="com.jsj141.osport.domain.Admin">
        select * from admin where id=#{id}
    </select>

    <select id="count" resultType="int">
        select count(*) from admin
        <include refid="dynamicWhere"/>
    </select>

    <select id="list" resultType="com.jsj141.osport.domain.Admin">
        select * from admin
        <include refid="dynamicWhere"/>
        <if test="_parameter.containsKey('order') and order!=null">
            order by ${order}
        </if>
        limit #{start},#{size}
    </select>

    <insert id="insert" parameterType="com.jsj141.osport.domain.Admin" useGeneratedKeys="true" keyProperty="id">
        insert into admin (login_name,true_name,type,password,last_login_time,reg_time)
        values (#{loginName},#{trueName},#{type},#{password},#{lastLoginTime},#{regTime})
    </insert>

    <update id="update" parameterType="com.jsj141.osport.domain.Admin">
        update admin
        <set>
            <if test="loginName != null  and loginName !=''">
                login_name=#{loginName},
            </if>
            <if test="trueName != null  and trueName !=''">
                true_name=#{trueName},
            </if>
            <if test="type != null">
                type=#{type},
            </if>
            <if test="password != null and password !=''">
                password=#{password},
            </if>
            <if test="lastLoginTime != null">
                last_login_time=#{lastLoginTime},
            </if>
            <if test="regTime != null">
                reg_time=#{regTime},
            </if>

        </set>
        where id=#{id}
    </update>

    <update id="delete">
        delete from admin where id=#{id}
    </update>

</mapper>