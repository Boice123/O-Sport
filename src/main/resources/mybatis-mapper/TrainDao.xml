<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jsj141.osport.dao.TrainDao">

    <sql id="dynamicWhere">
        <where>
            <if test="_parameter.containsKey('trainids') and trainids != null and trainids != ''">
                and trainid in (${trainids})
            </if>
        </where>
    </sql>

    <select id="select" resultType="com.jsj141.osport.domain.Train">
        select * from train where trainid=#{trainid}
    </select>

    <select id="count" resultType="int">
        select count(*) from train
        <include refid="dynamicWhere" />
    </select>

    <select id="list" resultType="com.jsj141.osport.domain.Train">
        select * from train
        <include refid="dynamicWhere" />
        <if test="_parameter.containsKey('order') and order!=null">
            order by ${order}
        </if>
        limit #{start},#{size}
    </select>

    <insert id="insert" parameterType="com.jsj141.osport.domain.Train">
        insert into train (trainname,traindescription,trainnotice,trainprice,maxpeople,trainpublishtime,trainimg,shopid)
        values (#{trainname},#{traindescription},#{trainnotice},#{trainprice},#{maxpeople},#{trainpublishtime},#{trainimg},#{shopid})
    </insert>

    <update id="update" parameterType="com.jsj141.osport.domain.Train">
        update train 
        <set>
            <if test="trainname != null">
                trainname=#{trainname},
            </if>
            <if test="traindescription != null">
                traindescription=#{traindescription},
            </if>
            <if test="trainnotice != null">
                trainnotice=#{trainnotice},
            </if>
            <if test="trainprice != 0">
                trainprice=#{trainprice},
            </if>
            <if test="maxpeople != 0">
                maxpeople=#{maxpeople},
            </if>
            <if test="trainpublishtime != null">
                trainpublishtime=#{trainpublishtime},
            </if>
            <if test="trainimg != null">
                trainimg=#{trainimg},
            </if>
            <if test="shopid != null">
                shopid=#{shopid},
            </if>
        </set>
        where trainid=#{trainid}
    </update>

    <update id="delete">
        delete from train where trainid=#{trainid}
    </update>

</mapper>